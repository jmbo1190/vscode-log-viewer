{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "lib": ["es6", "dom"],
      "outDir": "out",
      "jsx": "react",
      "moduleResolution": "node",
      "sourceMap": true,
      "strict": true,
      "skipLibCheck": true,
      "types": ["node", "vscode"],
      // The esModuleInterop flag in TypeScript enables compatibility with CommonJS modules, making it possible to use the default import syntax (import React from 'react') even if the module technically uses module.exports.
      "esModuleInterop": true 
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules"]
  }
  