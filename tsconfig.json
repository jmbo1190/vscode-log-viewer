{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "lib": ["es6", "dom"],
      "outDir": "out",
      "jsx": "react",
      "moduleResolution": "node",
      "sourceMap": true,
      "strict": true,
      "skipLibCheck": true,
      "types": ["node", "vscode"]
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules"]
  }
  